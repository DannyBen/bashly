# :flag.case
<%= aliases.join " | " %> )
  <%- if arg -%>
  if [[ $2 && $2 != -* ]]; then
    args[<%= long %>]="$2"
    shift
    shift
  else
    printf "<%= strings[:flag_requires_an_argument] % { long: long, usage: usage_string } %>\n"
    exit 1
  fi
  <%- else -%>
  args[<%= long %>]=1
  shift
  <%- end -%>
  ;;

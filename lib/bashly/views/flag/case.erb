# :flag.case
<%= aliases.join " | " %> )
% if arg
  if [[ -n "${2+present}" ]]; then
    args[<%= name %>]="$2"
    shift
    shift
  else
    printf "%s\n" "<%= strings[:flag_requires_an_argument] % { name: name, usage: usage_string } %>"
    exit 1
  fi
% else
  args[<%= name %>]=1
  shift
% end
  ;;

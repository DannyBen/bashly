if dependencies
  = view_marker

  dependencies.each do |dependency|
    > if ! command -v {{ dependency.commands.join(' ') }} >/dev/null 2>&1; then
    >   printf "{{ strings[:missing_dependency] % { dependency: dependency.name } }}\n" >&2
    if dependency.help
      >   printf "%s\n" "{{ dependency.help }}" >&2
    end
    >   exit 1
    > fi
    >
  end
end

# :command.usage
ftp_usage() {
  if [[ -n $long_usage ]]; then
    printf "ftp - Sample application that uses the default command option\n"
    echo 
  else
    printf "ftp - Sample application that uses the default command option\n"
    echo 
  fi
  printf "Usage:\n"
  printf "  ftp [command] [options]\n"
  printf "  ftp [command] --help | -h\n"
  printf "  ftp --version\n"
  echo
  # :command.usage_commands
  printf "Commands:\n"
  echo "  upload     Upload a file (default)"
  echo "  download   Download a file"
  echo

  if [[ -n $long_usage ]]; then
    printf "Options:\n"
    # :command.usage_fixed_flags
    echo "  --help, -h"
    printf "    Show this help\n"
    echo
    echo "  --version"
    printf "    Show version number\n"
    echo

  fi
}


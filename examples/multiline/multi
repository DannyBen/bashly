# :command.run
run() {
  declare -A args
  parse_requirements "$@"

  if [[ $action == "multiline" ]]; then
    if [[ ${args[--help]} ]]; then
      long_usage=yes
      multi_multiline_usage
    else
      multi_multiline_command
    fi
  
  elif [[ $action == "regular" ]]; then
    if [[ ${args[--help]} ]]; then
      long_usage=yes
      multi_regular_usage
    else
      multi_regular_command
    fi
  
  elif [[ ${args[--version]} ]]; then
    version_command
  elif [[ ${args[--help]} ]]; then
    long_usage=yes
    multi_usage
  elif [[ $action == "root" ]]; then
    root_command
  fi
}

initialize
run "$@"

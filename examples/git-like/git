git_commit_usage() {
  if [[ -n $long_usage ]]; then
    printf "git commit - Commit changes\n"
    echo 
  else
    printf "git commit - Commit changes\n"
    echo 
  fi

  printf "Shortcut: c*\n"
  echo

  printf "Usage:\n"
  printf "  git commit [options]\n"
  printf "  git commit --help | -h\n"
  echo

  if [[ -n $long_usage ]]; then
    printf "Options:\n"

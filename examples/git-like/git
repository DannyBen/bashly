}

# :command.run
run() {
  declare -A args
  parse_requirements "$@"

  if [[ $action == "status" ]]; then
    if [[ ${args[--help]} ]]; then
      long_usage=yes
      git_status_usage
    else
      git_status_command
    fi
  
  elif [[ $action == "commit" ]]; then
    if [[ ${args[--help]} ]]; then
      long_usage=yes
      git_commit_usage
    else
      git_commit_command
    fi
  
  elif [[ ${args[--version]} ]]; then
    version_command
  elif [[ ${args[--help]} ]]; then
    long_usage=yes
    git_usage
  elif [[ $action == "root" ]]; then
    root_command
  fi
}

initialize
run "$@"

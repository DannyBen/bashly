}

# :command.run
run() {
  declare -A args
  declare -a other_args
  parse_requirements "$@"

  if [[ $action == "verify" ]]; then
    if [[ ${args[--help]} ]]; then
      long_usage=yes
      cli_verify_usage
    else
      cli_verify_command
    fi
  
  elif [[ $action == "root" ]]; then
    root_command
  fi
}

initialize
run "$@"
